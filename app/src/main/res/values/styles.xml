<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#008000</item>
        <item name="colorPrimaryDark">#008000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splashTheme." parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#008000</item>
        <item name="colorPrimaryDark">#008000</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:windowBackground">@drawable/splash_activity_background</item>
    </style>

    <style name="RedProgressbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#008000</item>
        <item name="colorPrimaryDark">#008000</item>
        <item name="colorAccent">#008000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>

